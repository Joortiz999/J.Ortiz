<%- include('partials/_header') -%>
<main class="page citas-page">
    <section class="clean-block clean-form dark" style="color: rgb(33, 37, 41);background: rgb(0,0,0);">
        <div class="container">
            <div class="block-heading">
                <h2 style="color: red;font-family: UnifrakturMaguntia, cursive;">Debe estar Loggeado</h2>
            </div>
            <form method="POST" action="reservar">
                <div class="mb-1"><label class="form-label" for="fecha"
                        style="color: rgb(33, 37, 41);font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Fecha</label><input
                        class="form-control" type="date" id="fecha" name="fecha" disabled></div>
                <div class="mb-1"><label class="form-label" for="hora"
                        style="font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Hora</label><input
                        class="form-control" type="time" id="hora" name="hora" disabled></div>
               
                <div class="mb-1">
                    <label class="form-label" for="usuario" style="color: rgb(33, 37, 41);font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Usuario</label>
                    <input type="text" class="form-control" name="usuario" id="usuario" disabled></input>
                </div>

                <div class="mb-0">
                    <label class="form-label" for="tatuador" style="color: rgb(33, 37, 41);font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Tatuador</label>
                    <select name="tatuador" id="tatuador" style="font-size: 20px" disabled>
                        <option>Brigitte</option>
                        <option>Daniel</option>
                        <option value="Marianna">Marianna</option>
                    </select>
                </div>

                <div class="mb-0">
                    <label class="form-label" for="servicio" style="color: rgb(33, 37, 41);font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Servicio</label>
                    <select name="servicio" id="servicio" style="font-size: 20px" disabled>
                        <option value="Tatuado">Tatuaje</option>
                        <option value="Piercing">Piercing</option>
                    </select>
                </div>
                <div class="mb-1"><label class="form-label" for="observaciones"
                        style="font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Observaciones</label><textarea
                        class="form-control" id="observaciones" name="observaciones" disabled></textarea></div>
                <div class="text-center mb-3"><button class="btn btn-primary" type="submit"
                        style="background: rgb(245, 86, 13);color: rgb(0,0,0);font-family: Montserrat, sans-serif;font-size: 20px;text-align: center;">Reserva
                        Ya!</button>
                </div>
            </form>
        </div>
    </section>
</main><!-- Start: Footer Basic -->
<%- include('partials/_footer') -%>