<%- include('partials/_header') -%>
    <main class="page contact-us-page">
        <section class="clean-block clean-form dark" style="color: rgb(33, 37, 41);background: rgb(0,0,0);">
            <div class="container" style="font-family: UnifrakturMaguntia, cursive;">
                <div class="block-heading" style="color: #F5D10D;">
                    <h2 style="font-family: UnifrakturMaguntia, cursive;">Contact Us</h2>
                </div>
                <form method="POST" action="send">
                    <div class="mb-3"><label class="form-label" for="name" style="color: rgb(33, 37, 41);font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Name</label><input class="form-control" type="text" id="name" name="name"></div>
                    <div class="mb-3"><label class="form-label" for="subject" style="font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Subject</label><input class="form-control" type="text" id="subject" name="subject"></div>
                    <div class="mb-3"><label class="form-label" for="email" style="font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Email</label><input class="form-control" type="email" id="email" name="email"></div>
                    <div class="mb-3"><label class="form-label" for="message" style="font-size: 20px;font-family: UnifrakturMaguntia, cursive;">Message</label><textarea class="form-control" id="message" name="message"></textarea></div>
                    <div><div class="text-center mb-3"><button class="btn btn-primary" type="submit" style="background: rgb(245,209,13);color: rgb(0,0,0);font-family: Montserrat, sans-serif;font-size: 20px;text-align: center;">Send</button></div></div>
                </form>
            </div>
        </section>
    </main><!-- Start: Footer Basic -->
    <%- include('partials/_footer') -%>